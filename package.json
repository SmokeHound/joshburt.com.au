{
  "name": "joshburt-website",
  "version": "1.0.0",
  "description": "Static website for joshburt.com.au with Netlify Functions and Neon DB integration",
  "main": "index.html",
  "scripts": {
    "dev": "python3 -m http.server 8000",
    "build:css": "npx @tailwindcss/cli -i ./src/styles.css -o ./assets/css/styles.css -m",
    "build": "npm run build:css",
    "prune:tokens": "node scripts/prune-refresh-tokens.js",
  "migrate:updated_at": "node scripts/add-updated-at.js",
    "test:smoke:functions": "node tests/functions/auth_me_smoke.test.js",
    "test:functions": "node tests/functions/auth_me_smoke.test.js && node tests/functions/orders_products_smoke.test.js && node tests/functions/auth_errors.test.js && node tests/functions/handlers.test.js",
    "test:unit": "jest --config jest.config.js --runTestsByPath tests/unit",
    "test:integration": "jest --config jest.config.js --runTestsByPath tests/integration",
    "test:jest": "jest --config jest.config.js",
    "test": "npm run test:jest",
    "test:all": "npm run test:jest && npm run test:functions",
    "lint:js": "eslint . --ext .js",
    "lint:html": "htmlhint '**/*.html'",
    "lint": "npm run lint:js && npm run lint:html",
    "validate": "npm run lint && npm run build:css && npm run test:all"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SmokeHound/joshburt.com.au"
  },
  "dependencies": {
    "@auth0/auth0-spa-js": "^2.5.0",
    "@neondatabase/serverless": "^1.0.1",
    "@netlify/functions": "^4.2.5",
    "@netlify/zip-it-and-ship-it": "^14.1.8",
    "bcryptjs": "^3.0.2",
    "dotenv": "^17.2.2",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.6",
    "pg": "^8.11.3",
    "sqlite3": "^5.1.7"
  },
  "author": "Josh Burt",
  "license": "MIT",
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.36.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.36.0",
    "globals": "^16.4.0",
    "htmlhint": "^1.7.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.13",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  }
}
