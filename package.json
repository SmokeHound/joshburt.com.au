{
  "name": "joshburt-website",
  "version": "1.0.0",
  "description": "Static website for joshburt.com.au with Netlify Functions and Neon DB integration",
  "main": "index.html",
  "scripts": {
    "dev": "python3 -m http.server 8000",
    "build:css": "npx @tailwindcss/cli -i ./src/styles.css -o ./assets/css/styles.css -m",
    "build": "npm run build:css",
    "test:smoke:functions": "node tests/functions/auth_me_smoke.test.js",
    "test": "npm run test:smoke:functions",
    "lint:js": "eslint . --ext .js",
    "lint:html": "htmlhint '**/*.html'",
    "lint": "npm run lint:js && npm run lint:html"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SmokeHound/joshburt.com.au"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.1",
    "@netlify/functions": "^4.2.5",
    "@netlify/zip-it-and-ship-it": "^14.1.8",
    "bcryptjs": "^3.0.2",
    "dotenv": "^17.2.2",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.14.5",
    "nodemailer": "^7.0.6",
    "pg": "^8.11.3",
    "sqlite3": "^5.1.7"
  },
  "author": "Josh Burt",
  "license": "MIT",
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.36.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.36.0",
    "globals": "^16.4.0",
    "htmlhint": "^1.7.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.13"
  }
}
