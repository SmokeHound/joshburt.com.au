{
  "name": "joshburt-website",
  "version": "1.0.0",
  "description": "Static website for joshburt.com.au with responsive design and admin features",
  "main": "index.html",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:integration": "jest tests/integration",
    "test:unit": "jest tests/unit",
    "lint": "npx htmlhint index.html admin.html users.html analytics.html settings.html oil.html login.html",
    "lint:js": "eslint tests/**/*.js",
    "lint:fix": "eslint --ext .js *.html --fix",
    "serve": "python3 -m http.server 8000",
    "validate": "npm run lint && npm run lint:js && npm run test"
  },
  "keywords": [
    "static-website",
    "responsive",
    "tailwindcss",
    "admin-dashboard"
  ],
  "author": "Josh Burt",
  "license": "MIT",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "eslint": "^8.57.0",
    "htmlhint": "^1.1.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "node-fetch": "^2.7.0"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "express-session": "^1.18.2",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.6",
    "passport": "^0.7.0",
    "passport-github2": "^0.1.12",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.16.3",
    "sqlite3": "^5.1.7",
    "supertest": "^7.1.4"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "*.html",
      "shared-*.html",
      "!node_modules/**"
    ]
  }
}
