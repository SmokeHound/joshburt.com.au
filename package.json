{
  "name": "joshburt-website",
  "version": "1.0.0",
  "description": "Static website for joshburt.com.au with Netlify Functions and Neon DB integration",
  "main": "index.html",
  "scripts": {
    "dev": "python3 -m http.server 8000",
    "build:css": "npx tailwindcss -c tailwind.config.js -i ./src/styles.css -o ./assets/css/styles.css --minify",
    "build": "npm run build:css",
    "test": "echo 'No tests configured'",
    "lint:js": "eslint . --ext .js",
    "lint:html": "htmlhint '**/*.html'",
    "lint": "npm run lint:js && npm run lint:html"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SmokeHound/joshburt.com.au"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.1",
    "@netlify/functions": "^4.2.5",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "express-session": "^1.18.2",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.14.5",
    "nodemailer": "^7.0.6",
    "passport": "^0.7.0",
    "passport-github2": "^0.1.12",
    "passport-google-oauth20": "^2.0.0",
    "passport-local": "^1.0.0",
    "path": "^0.12.7",
    "pg": "^8.11.3",
    "sequelize": "^6.37.7",
    "sqlite3": "^5.1.7"
  },
  "author": "Josh Burt",
  "license": "MIT",
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.36.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.36.0",
    "globals": "^16.4.0",
    "htmlhint": "^1.7.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.13"
  }
}
